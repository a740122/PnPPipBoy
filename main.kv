<RootWidget>:
    ScreenManager:
        Screen:
            name:'Intro'
            StackLayout:
                BoxLayout:
                    size_hint:1,0.0714
                    Button:
                        text:'Load Character'
                        on_press:
                            root.loadCharacter('savedchar','char.py')
                            root.children[0].current='PipBoy'
                BoxLayout:
                    size_hint:1,0.0714
                    Button:
                        text:'New Character'
                        on_press:
                            root.children[0].current='characterCreation'
        Screen:
            name:'characterCreation'
            TabbedPanel:
                do_default_tab: False

                TabbedPanelItem:
                    text:'Character'
                    StackLayout:
                        SPECIALrow:
                            size_hint:1,0.0714
                            Label:
                                size:0.333,1
                                text:'Name'
                            characterDetailsInput:
                                id: charName
                                multiline: False
                                text:self.getText(root,0)
                                on_text_validate:
                                    self.updateText(root,0)
                                    root.playerCharacter.updateSPECIALandcharacterDetails()
                        SPECIALrow:
                            size_hint:1,0.0714
                            Label:
                                size:0.333,1
                                text:'Age'
                            characterDetailsInput:
                                id: charAge
                                multiline: False
                                text:self.getText(root,1)
                                on_text_validate:
                                    self.updateText(root,1)
                                    root.playerCharacter.updateSPECIALandcharacterDetails()
                        SPECIALrow:
                            size_hint:1,0.0714
                            Label:
                                size:0.333,1
                                text:'Race'
                            characterDetailsInput:
                                id: charRace
                                multiline: False
                                text:self.getText(root,2)
                                on_text_validate:
                                    self.updateText(root,2)
                                    root.playerCharacter.updateSPECIALandcharacterDetails()
                        SPECIALrow:
                            size_hint:1,0.0714
                            Label:
                                text:'Gender'
                            characterDetailsInput:
                                id: charGender
                                multiline: False
                                text:self.getText(root,3)
                                on_text_validate:
                                    self.updateText(root,3)
                                    root.playerCharacter.updateSPECIALandcharacterDetails()
                        SPECIALrow:
                            size_hint:1,0.0714
                            Label:
                                text:'Karma'
                            characterDetailsInput:
                                id: charKarma
                                hint_text:'-500 to 500'
                                multiline: False
                                text:self.getText(root,4)
                                on_text_validate:
                                    self.updateText(root,4)
                                    root.playerCharacter.updateSPECIALandcharacterDetails()
                        SPECIALrow:
                            size_hint:1,0.3
                            Label:
                                text:'Notes'
                            characterDetailsInput:
                                id:charNotes
                                hint_text:'Appearance/history...'
                                multiline:False
                                text:self.getText(root,5)
                                on_text_validate:
                                    self.updateText(root,5)
                                    root.playerCharacter.updateSPECIALandcharacterDetails()


                TabbedPanelItem:
                    text:'SPECIAL'
                    StackLayout:
                           
                        SPECIALrow:
                            size_hint:1,0.1428
                            StatLabel:
                                text:'Strength'
                            ArrowButton:
                                text:'<'
                                on_press: 
                                    ST.incrment(root,-1)
                                    ST.updateNum(root,0)
                            numLabel:
                                text:'{}'.format(self.getNum(root,0))
                                id: ST
                            ArrowButton:
                                text:'>'
                                on_press: 
                                    ST.incrment(root,1)
                                    ST.updateNum(root,0)
                        
                        
                        SPECIALrow:
                            size_hint:1,0.1428
                            StatLabel:
                                text:'Perception'
                            ArrowButton:
                                text:'<'
                                on_press: 
                                    PE.incrment(root,-1)
                                    PE.updateNum(root,1)
                            numLabel:
                                text:'{}'.format(self.getNum(root,1))
                                id: PE
                            ArrowButton:
                                text:'>'
                                on_press: 
                                    PE.incrment(root,1)
                                    PE.updateNum(root,1)

                        SPECIALrow:
                            size_hint:1,0.1428
                            StatLabel:
                                text:'Endurance'
                            ArrowButton:
                                text:'<'
                                on_press: 
                                    EN.incrment(root,-1)
                                    EN.updateNum(root,2)
                            numLabel:
                                text:'{}'.format(self.getNum(root,2))
                                id: EN
                            ArrowButton:
                                text:'>'
                                on_press: 
                                    EN.incrment(root,1)
                                    EN.updateNum(root,2)

                        
                        
                        SPECIALrow:
                            size_hint:1,0.1428
                            StatLabel:
                                text:'Charisma'
                            ArrowButton:
                                text:'<'
                                on_press: 
                                    CH.incrment(root,-1)
                                    CH.updateNum(root,3)
                            numLabel:
                                text:'{}'.format(self.getNum(root,3))
                                id: CH
                            ArrowButton:
                                text:'>'
                                on_press: 
                                    CH.incrment(root,1)
                                    CH.updateNum(root,3)

                        
                        
                        SPECIALrow:
                            size_hint:1,0.1428
                            StatLabel:
                                text:'Intelligence'
                            ArrowButton:
                                text:'<'
                                on_press: 
                                    IN.incrment(root,-1)
                                    IN.updateNum(root,4)
                            numLabel:
                                text:'{}'.format(self.getNum(root,4))
                                id: IN
                            ArrowButton:
                                text:'>'
                                on_press: 
                                    IN.incrment(root,1)
                                    IN.updateNum(root,4)

                        
                            
                        SPECIALrow:
                            size_hint:1,0.1428
                            StatLabel:
                                text:'Agility'
                            ArrowButton:
                                text:'<'
                                on_press: 
                                    AG.incrment(root,-1)
                                    AG.updateNum(root,5)
                            numLabel:
                                text:'{}'.format(self.getNum(root,5))
                                id: AG
                            ArrowButton:
                                text:'>'
                                on_press: 
                                    AG.incrment(root,1)
                                    AG.updateNum(root,5)

                        
                            
                        SPECIALrow:
                            size_hint:1,0.1428
                            StatLabel:
                                text:'Luck'
                            ArrowButton:
                                text:'<'
                                on_press: 
                                    LK.incrment(root,-1)
                                    LK.updateNum(root,6)
                            numLabel:
                                text:'{}'.format(self.getNum(root,6))
                                id: LK
                            ArrowButton:
                                text:'>'
                                on_press: 
                                    LK.incrment(root,1)
                                    LK.updateNum(root,6)
                TabbedPanelItem:
                    text:'Finish'
                    BoxLayout:
                        padding:20,200
                        Button:
                            text:'Finished Creating Character'
                            on_press:
                                root.saveCharacter()
                                root.children[0].current='PipBoy'
        Screen:
            name:'PipBoy'
            TabbedPanel:
                do_default_tab: False

                TabbedPanelItem:
                    text:'Status'
                    ScrollView:

