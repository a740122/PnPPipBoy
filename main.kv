<RootWidget>:
    TabbedPanel:
        do_default_tab: False

        TabbedPanelItem:
            text:'Character'
            StackLayout:
                SPECIALrow:
                    size_hint:1,0.0714
                    Label:
                        size:0.333,1
                        text:'Name'
                    TextInput:
                        multiline: False
                SPECIALrow:
                    size_hint:1,0.0714
                    Label:
                        text:'Gender'
                    TextInput:
                        multiline: False
                SPECIALrow:
                    size_hint:1,0.0714
                    Label:
                        text:'Karma'
                    TextInput:
                        hint_text:'-500 to 500'
                        multiline: False
                        id:Karma
                SPECIALrow:
                    size_hint:1,0.3
                    Label:
                        text:'Notes'
                    TextInput:
                        hint_text:'Appearance/history...'
                        multiline:True


        TabbedPanelItem:
            text:'SPECIAL'
            StackLayout:
                   
                SPECIALrow:
                    size_hint:1,0.1428
                    StatLabel:
                        text:'Strength'
                    ArrowButton:
                        text:'<'
                        on_press: 
                            ST.incrment(-1)
                    STnumLabel:
                        text:'{}'.format(self.value)
                        id: ST
                    ArrowButton:
                        text:'>'
                        on_press: 
                            ST.incrment(1)
                
                
                SPECIALrow:
