<RootWidget>:
    ScreenManager:
        Screen:
            name:'Intro'
            StackLayout:
                BoxLayout:
                    size_hint:1,0.0714
                    Button:
                        text:'Load Character'
                        on_press:
                            root.loadCharacter('savedchar','char.py')
                            root.children[0].current='PipBoy'
                BoxLayout:
                    size_hint:1,0.0714
                    Button:
                        text:'New Character'
                        on_press:
                            root.children[0].current='characterCreation'
        Screen:
            name:'characterCreation'
            TabbedPanel:
                do_default_tab: False

                TabbedPanelItem:
                    text:'Character'
                    StackLayout:
                        SPECIALrow:
                            size_hint:1,0.0714
                            Label:
                                size:0.333,1
                                text:'Name'
                            TextInput:
                                id: charName
                                multiline: False
                                text:root.playerCharacter.name
                        SPECIALrow:
                            size_hint:1,0.0714
                            Label:
                                size:0.333,1
                                text:'Age'
                            TextInput:
                                id: charAge
                                multiline: False
                                text:root.playerCharacter.age
                        SPECIALrow:
                            size_hint:1,0.0714
                            Label:
                                size:0.333,1
                                text:'Race'
                            TextInput:
                                id: charRace
                                multiline: False
                                text:root.playerCharacter.race
                        SPECIALrow:
                            size_hint:1,0.0714
                            Label:
                                text:'Gender'
                            TextInput:
                                id: charGender
                                multiline: False
                                text:root.playerCharacter.gender
                        SPECIALrow:
                            size_hint:1,0.0714
                            Label:
                                text:'Karma'
                            TextInput:
                                id: charKarma
                                hint_text:'-500 to 500'
                                multiline: False
                                text:root.playerCharacter.karma
                        SPECIALrow:
                            size_hint:1,0.3
                            Label:
                                text:'Notes'
                            TextInput:
                                id:charNotes
                                hint_text:'Appearance/history...'
                                multiline:True
                                text:root.playerCharacter.notes


                TabbedPanelItem:
                    text:'SPECIAL'
                    StackLayout:
                           
                        SPECIALrow:
                            size_hint:1,0.1428
                            StatLabel:
                                text:'Strength'
                            ArrowButton:
                                text:'<'
                                on_press: 
                                    ST.incrment(root,-1)
                                    ST.updateNum(root)
                            STnumLabel:
                                text:'{}'.format(self.getNum(root))
                                id: ST
                            ArrowButton:
                                text:'>'
                                on_press: 
                                    ST.incrment(root,1)
                                    ST.updateNum(root)
                        
                        
                        SPECIALrow:
                            size_hint:1,0.1428
                            StatLabel:
                                text:'Perception'
                            ArrowButton:
                                text:'<'
                                on_press: 
                                    PE.incrment(root,-1)
                                    PE.updateNum(root)
                            PEnumLabel:
                                text:'{}'.format(self.getNum(root))
                                id: PE
                            ArrowButton:
                                text:'>'
                                on_press: 
                                    PE.incrment(root,1)
                                    PE.updateNum(root)

                        SPECIALrow:
                            size_hint:1,0.1428
                            StatLabel:
                                text:'Endurance'
                            ArrowButton:
                                text:'<'
                                on_press: 
                                    EN.incrment(root,-1)
                                    EN.updateNum(root)
                            ENnumLabel:
                                text:'{}'.format(self.getNum(root))
                                id: EN
                            ArrowButton:
                                text:'>'
                                on_press: 
                                    EN.incrment(root,1)
                                    EN.updateNum(root)

                        
                        
                        SPECIALrow:
                            size_hint:1,0.1428
                            StatLabel:
                                text:'Charisma'
                            ArrowButton:
                                text:'<'
                                on_press: 
                                    CH.incrment(root,-1)
                                    CH.updateNum(root)
                            CHnumLabel:
                                text:'{}'.format(self.getNum(root))
                                id: CH
                            ArrowButton:
                                text:'>'
                                on_press: 
                                    CH.incrment(root,1)
                                    CH.updateNum(root)

                        
                        
                        SPECIALrow:
                            size_hint:1,0.1428
                            StatLabel:
                                text:'Intelligence'
                            ArrowButton:
                                text:'<'
                                on_press: 
                                    IN.incrment(root,-1)
                                    IN.updateNum(root)
                            INnumLabel:
                                text:'{}'.format(self.getNum(root))
                                id: IN
                            ArrowButton:
                                text:'>'
                                on_press: 
                                    IN.incrment(root,1)
                                    IN.updateNum(root)

                        
                            
                        SPECIALrow:
                            size_hint:1,0.1428
                            StatLabel:
                                text:'Agility'
                            ArrowButton:
                                text:'<'
                                on_press: 
                                    AG.incrment(root,-1)
                                    AG.updateNum(root)
                            AGnumLabel:
                                text:'{}'.format(self.getNum(root))
                                id: AG
                            ArrowButton:
                                text:'>'
                                on_press: 
                                    AG.incrment(root,1)
                                    AG.updateNum(root)

                        
                            
                        SPECIALrow:
                            size_hint:1,0.1428
                            StatLabel:
                                text:'Luck'
                            ArrowButton:
                                text:'<'
                                on_press: 
                                    LK.incrment(root,-1)
                                    LK.updateNum(root)
                            LKnumLabel:
                                text:'{}'.format(self.getNum(root))
                                id: LK
                            ArrowButton:
                                text:'>'
                                on_press: 
                                    LK.incrment(root,1)
                                    LK.updateNum(root)


                TabbedPanelItem:
                    text:'Finish'
                    BoxLayout:
                        padding:20,200
                        Button:
                            text:'Finished Creating Character'
                            on_press:
                                root.writeToPlayer(
                                SPECIAL=[
                                root.ids.ST.value,
                                root.ids.PE.value,
                                root.ids.EN.value,
                                root.ids.CH.value,
                                root.ids.IN.value,
                                root.ids.AG.value,
                                root.ids.LK.value,
                                ],
                                characterDetails=[
                                root.ids.charName.text,
                                root.ids.charAge.text,
                                root.ids.charRace.text,
                                root.ids.charGender.text,
                                root.ids.charKarma.text,
                                root.ids.charNotes.text
                                ]
                                )
                                root.children[0].current='PipBoy'
        Screen:
            name:'PipBoy'
            TabbedPanel:
                do_default_tab: False

                TabbedPanelItem:
                    text:'Status'
                    ScrollView:

