<RootWidget>:
    on_touch_up:
        root.playerCharacter.updateSPECIALAndcharacterDetails()
    ScreenManager:
        Screen:
            name:'Intro'
            StackLayout:
                BoxLayout:
                    size_hint:1,0.0714
                    Button:
                        text:'Load Character'
                        on_press:
                            root.loadCharacter('savedchar','char.py')
                            root.children[0].current='PipBoy'
                BoxLayout:
                    size_hint:1,0.0714
                    Button:
                        text:'New Character'
                        on_press:
                            root.children[0].current='characterCreation'
        Screen:
            name:'characterCreation'
            TabbedPanel:
                do_default_tab: False

                TabbedPanelItem:
                    text:'Character'
                    StackLayout:
                        SPECIALrow:
                            size_hint:1,0.0714
                            Label:
                                size:0.333,1
                                text:'Name'
                            characterDetailsInput:
                                id: charName
                                multiline: False
                                text:self.getText(root,0)

                        SPECIALrow:
                            size_hint:1,0.0714
                            Label:
                                size:0.333,1
                                text:'Age'
                            characterDetailsInput:
                                id: charAge
                                multiline: False
                                text:self.getText(root,1)

                        SPECIALrow:
                            size_hint:1,0.0714
                            Label:
                                size:0.333,1
                                text:'Race'
                            characterDetailsInput:
                                id: charRace
                                multiline: False
                                text:self.getText(root,2)

                        SPECIALrow:
                            size_hint:1,0.0714
                            Label:
                                text:'Gender'
                            characterDetailsInput:
                                id: charGender
                                multiline: False
                                text:self.getText(root,3)

                        SPECIALrow:
                            size_hint:1,0.0714
                            Label:
                                text:'Karma'
                            characterDetailsInput:
                                id: charKarma
                                hint_text:'-500 to 500'
                                multiline: False
                                text:self.getText(root,4)

                        SPECIALrow:
                            size_hint:1,0.3
                            Label:
                                text:'Notes'
                            characterDetailsInput:
                                id:charNotes
                                hint_text:'Appearance/history...'
                                multiline:True
                                text:self.getText(root,5)

                        SPECIALrow:
                            size_hint:1,0.0714
                            Button:
                                text:'Save These Details'
                                on_press:
                                    charName.updateText(root,0)
                                    charAge.updateText(root,1)
                                    charRace.updateText(root,2)
                                    charGender.updateText(root,3)
                                    charKarma.updateText(root,4)
                                    charNotes.updateText(root,5)
                                    root.playerCharacter.updateSPECIALAndcharacterDetails()


                TabbedPanelItem:
                    text:'SPECIAL'
                    StackLayout:
                           
                        SPECIALrow:
                            size_hint:1,0.1428
                            StatLabel:
                                text:'Strength'
                            ArrowButton:
                                text:'<'
                                on_press: 
                                    ST.incrment(root,-1)
                                    ST.updateNum(root,0)
                            numLabel:
                                text:'{}'.format(self.getNum(root,0))
                                id: ST
                            ArrowButton:
                                text:'>'
                                on_press: 
                                    ST.incrment(root,1)
                                    ST.updateNum(root,0)
                        
                        
                        SPECIALrow:
                            size_hint:1,0.1428
                            StatLabel:
                                text:'Perception'
                            ArrowButton:
                                text:'<'
                                on_press: 
                                    PE.incrment(root,-1)
                                    PE.updateNum(root,1)
                            numLabel:
                                text:'{}'.format(self.getNum(root,1))
                                id: PE
                            ArrowButton:
                                text:'>'
                                on_press: 
                                    PE.incrment(root,1)
                                    PE.updateNum(root,1)

                        SPECIALrow:
                            size_hint:1,0.1428
                            StatLabel:
                                text:'Endurance'
                            ArrowButton:
                                text:'<'
                                on_press: 
                                    EN.incrment(root,-1)
                                    EN.updateNum(root,2)
                            numLabel:
                                text:'{}'.format(self.getNum(root,2))
                                id: EN
                            ArrowButton:
                                text:'>'
                                on_press: 
                                    EN.incrment(root,1)
                                    EN.updateNum(root,2)

                        
                        
                        SPECIALrow:
                            size_hint:1,0.1428
                            StatLabel:
                                text:'Charisma'
                            ArrowButton:
                                text:'<'
                                on_press: 
                                    CH.incrment(root,-1)
                                    CH.updateNum(root,3)
                            numLabel:
                                text:'{}'.format(self.getNum(root,3))
                                id: CH
                            ArrowButton:
                                text:'>'
                                on_press: 
                                    CH.incrment(root,1)
                                    CH.updateNum(root,3)

                        
                        
                        SPECIALrow:
                            size_hint:1,0.1428
                            StatLabel:
                                text:'Intelligence'
                            ArrowButton:
                                text:'<'
                                on_press: 
                                    IN.incrment(root,-1)
                                    IN.updateNum(root,4)
                            numLabel:
                                text:'{}'.format(self.getNum(root,4))
                                id: IN
                            ArrowButton:
                                text:'>'
                                on_press:
                                    print root.playerCharacter.special
                                    print IN.getNum(root,4)
                                    IN.incrment(root,1)
                                    IN.updateNum(root,4)

                        
                            
                        SPECIALrow:
                            size_hint:1,0.1428
                            StatLabel:
                                text:'Agility'
                            ArrowButton:
                                text:'<'
                                on_press: 
                                    AG.incrment(root,-1)
                                    AG.updateNum(root,5)
                            numLabel:
                                text:'{}'.format(self.getNum(root,5))
                                id: AG
                            ArrowButton:
                                text:'>'
                                on_press: 
                                    AG.incrment(root,1)
                                    AG.updateNum(root,5)

                        
                            
                        SPECIALrow:
                            size_hint:1,0.1428
                            StatLabel:
                                text:'Luck'
                            ArrowButton:
                                text:'<'
                                on_press: 
                                    LK.incrment(root,-1)
                                    LK.updateNum(root,6)
                            numLabel:
                                text:'{}'.format(self.getNum(root,6))
                                id: LK
                            ArrowButton:
                                text:'>'
                                on_press: 
                                    LK.incrment(root,1)
                                    LK.updateNum(root,6)
                TabbedPanelItem:
                    text:'Finish'
                    BoxLayout:
                        padding:20,200
                        Button:
                            text:'Finished Creating Character'
                            on_press:
                                root.playerCharacter.updateSPECIALAndcharacterDetails()
                                root.saveCharacter()
                                root.children[0].current='PipBoy'
        Screen:
            on_enter:
                root.playerCharacter=root.reloadCharacter()
                STLabel.updateLabel(root, 'ST', 0)
                PELabel.updateLabel(root, 'PE', 1)
                ENLabel.updateLabel(root, 'EN', 2)
                CHLabel.updateLabel(root, 'CH', 3)
                INLabel.updateLabel(root, 'IN', 4)
                AGLabel.updateLabel(root, 'AG', 5)
                LKLabel.updateLabel(root, 'LK', 6)
                Name.updateLabel(root,'Name',root.playerCharacter.name)
                HP.updateLabel(root,'HP',root.playerCharacter.HP)
                Level.updateLabel(root,'Level',root.playerCharacter.level)
                Rads.updateLabel(root,'Rads',root.playerCharacter.rads)
                Poison.updateLabel(root,'Poison',root.playerCharacter.poison)
                smallGuns.updateLabel('smallGuns',root.playerCharacter.smallGuns)
                bigGuns.updateLabel('bigGuns',root.playerCharacter.bigGuns)
                energyWeapons.updateLabel('energyWeapons',root.playerCharacter.energyWeapons)
                unarmed.updateLabel('unarmed',root.playerCharacter.unarmed)
                meleeWeapons.updateLabel('meleeWeapons',root.playerCharacter.meleeWeapons)
                throwing.updateLabel('throwing',root.playerCharacter.throwing)
                firstAid.updateLabel('firstAid',root.playerCharacter.firstAid)
                doctor.updateLabel('doctor',root.playerCharacter.doctor)
                sneak.updateLabel('sneak',root.playerCharacter.sneak)
                lockpick.updateLabel('lockpick',root.playerCharacter.lockpick)
                steal.updateLabel('steal',root.playerCharacter.steal)
                traps.updateLabel('traps',root.playerCharacter.traps)
                science.updateLabel('science',root.playerCharacter.science)
                repair.updateLabel('repair',root.playerCharacter.repair)
                pilot.updateLabel('pilot',root.playerCharacter.pilot)
                speech.updateLabel('speech',root.playerCharacter.speech)
                barter.updateLabel('barter',root.playerCharacter.barter)
                gambling.updateLabel('gambling',root.playerCharacter.gambling)
                outdoorsman.updateLabel('outdoorsman',root.playerCharacter.outdoorsman)
            name:'PipBoy'
            TabbedPanel:
                do_default_tab: False

                TabbedPanelItem:
                    text:'Status'
                    FloatLayout:
                        BoxLayout:
                            orientation:'vertical'
                            size_hint:0.3,0.3
                            pos:(root.x+int(self.width/2.0),root.height-self.height-110)
                            
                            Label:
                                text:'Name:'
                            CharDetailLabel:
                                id:Name
                            Label:
                                text:''

                            SpecialLabel:
                                id:STLabel                            
                            SpecialLabel:
                                id:PELabel                            
                            SpecialLabel:
                                id:ENLabel                            
                            SpecialLabel:
                                id:CHLabel                            
                            SpecialLabel:
                                id:INLabel                            
                            SpecialLabel:
                                id:AGLabel                            
                            SpecialLabel:
                                id:LKLabel                        
                        BoxLayout:
                            orientation:'vertical'
                            size_hint:0.3,0.3
                            pos:(root.width-self.width,root.height-self.height-110)
                            CharDetailLabel:
                                id:HP
                            CharDetailLabel:
                                id:Level
                            CharDetailLabel:
                                id:Rads
                            CharDetailLabel:
                                id:Poison

                TabbedPanelItem:
                    text:'Skills'
                    BoxLayout:
                        size_hint:1,1
                        BoxLayout:
                            size_hint:1,1
                            orientation:'vertical'
                            SkillLabel:
                                id:smallGuns
                            SkillLabel:
                                id:bigGuns
                            SkillLabel:
                                id:energyWeapons
                            SkillLabel:
                                id:unarmed
                            SkillLabel:
                                id:meleeWeapons
                            SkillLabel:
                                id:throwing
                            SkillLabel:
                                id:firstAid
                            SkillLabel:
                                id:doctor
                            SkillLabel:
                                id:sneak
                        BoxLayout:
                            size_hint:1,1
                            orientation:'vertical'
                            SkillLabel:
                                id:lockpick
                            SkillLabel:
                                id:steal
                            SkillLabel:
                                id:traps
                            SkillLabel:
                                id:science
                            SkillLabel:
                                id:repair
                            SkillLabel:
                                id:pilot
                            SkillLabel:
                                id:speech
                            SkillLabel:
                                id:barter
                            SkillLabel:
                                id:gambling
                            SkillLabel:
                                id:outdoorsman

                TabbedPanelItem:
                    text:'Inv.'
                    Inventory:
